<div class="min-h-screen p-4 md:p-6">
  <!-- Header -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900 flex items-center gap-3">
        <span class="bg-blue-100 text-blue-600 p-2 rounded-full">
          <span class="material-symbols-outlined">family_restroom</span>
        </span>
        Parent Dashboard
      </h1>
      <p class="text-gray-600 mt-1">Stay connected with your athlete's journey</p>
    </div>
    <%= render 'shared/common/notification_center' %>
  </div>
  <!-- Child Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
  <%if !@children.nil?%>
    <%= render 'parents/dashboard/partials/child_overview_cards', children: @children %>
  <%end%>
    <!-- Add Child Button -->
    <div class="bg-white rounded-xl shadow-sm p-6 border-2 border-dashed border-gray-300 hover:border-blue-400 transition-colors flex flex-col items-center justify-center">
      <div class="w-16 h-16 rounded-full bg-gray-100 flex items-center justify-center text-gray-400 mb-3">
        <span class="material-symbols-outlined text-3xl">add</span>
      </div>
      <h3 class="font-medium text-gray-700 mb-1">Add Child Athlete</h3>
      <p class="text-sm text-gray-500 text-center mb-3">Track multiple athletes in one place</p>
      <%= link_to "/accounts/add_child", class:"bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-4 rounded-lg text-sm font-medium flex items-center gap-1" do%>
        <span class="material-symbols-outlined text-sm">person_add</span>
        Register Child
      <%end%>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Progress Timeline -->
    <div id="progress-timeline-container" data-controller="child-selector" class="lg:col-span-2"
       data-child-selector-url-value="<%= select_child_parents_dashboard_index_path(child_id: ':child_id') %>">
      <%= render 'parents/dashboard/partials/progress_timeline', 
            milestones: @milestones || [], 
            children: @children, 
            selected_child: @selected_child %>
    </div>
    <!-- Messages & Feedback -->
    <%= render 'parents/dashboard/partials/messages_feedback', coach_feedback: @coach_feedback || [] %>
    <%= render 'parents/dashboard/partials/upcoming_events', upcoming_events: @upcoming_events || [] %>

    <!-- Attendance & Notifications -->
    <%= render 'parents/dashboard/partials/attendance_notification', children_attendances: @children_attendances%>
  </div>
</div>