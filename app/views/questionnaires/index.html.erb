                    </div>
                    <% end %>
                    <% else %>
                    <textarea name="answers[<%= q.id %>]" id="q<%= q.id %>" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required></textarea>
                    <% end %>
                </div>
            </div>
            <% end %>
        </div>

        <!-- Navigation buttons -->
        <div class="flex justify-between pt-6">
            <button type="button" data-action="click->questionnaire#prev" data-questionnaire-target="prevButton" class="hidden px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">
                Previous
            </button>

            <button type="button" data-action="click->questionnaire#next" data-questionnaire-target="nextButton" class="btn">
                Next
            </button>

            <button type="submit" data-questionnaire-target="submitButton" class="btn">
                Submit
            </button>
        </div>
    </form>
</div>