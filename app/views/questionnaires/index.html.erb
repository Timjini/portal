                    <div class="flex items-center">
                        <input id="q<%= q.id %>_<%= option.parameterize %>" type="checkbox" name="answers[<%= q.id %>][]" value="<%= option %>" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500">
                        <label for="q<%= q.id %>_<%= option.parameterize %>" class="ml-3 block text-sm font-medium text-gray-700">
                            <%= option %>
