                    <textarea name="answers[<%= q.id %>]" id="q<%= q.id %>" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required></textarea>
                    <% end %>
                </div>
            </div>
            <% end %>
        </div>

        <!-- Step 4 -->
        <div data-questionnaire-target="step" class="hidden space-y-6">
            <% @questions[15..19].each do |q| %>
            <div class="p-6 bg-white rounded-lg shadow">
                <p class="font-medium mb-4"><%= q.position %>. <%= q.content %></p>
                <div class="space-y-3">
                    <% if q.question_type == 'radio' %>
