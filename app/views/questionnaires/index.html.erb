<div class="max-w-3xl mx-auto p-6" data-controller="questionnaire questionnaire-submit" data-questionnaire-total-steps-value="4" data-questionnaire-submit-submit-url-value="<%= answers_path %>" data-questionnaire-submit-user-id-value="<%= params[:user_id] %>">
    <!-- Progress bar -->
    <div class="w-full bg-gray-200 rounded-full h-2.5 mb-8">
        <div class="bg-red-700 h-2.5 rounded-full" data-questionnaire-target="progress" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <form id="questionnaire-form" class="space-y-6" data-questionnaire-submit-target="form" data-action="submit->questionnaire-submit#submit">
        <h1 class="text-2xl font-bold text-center mb-8">Athlete Health Questionnaire</h1>
        <!-- Step 1 -->
        <div data-questionnaire-target="step" class="space-y-6">
            <% @questions[0..4].each do |q| %>
            <div class="p-6 bg-white rounded-lg shadow">
                <p class="font-medium mb-4"><%= q.position %>. <%= q.content %></p>
                <div class="space-y-3">
                    <% if q.question_type == 'radio' %>
                    <% q.options.each do |option| %>
                    <div class="flex items-center">
                        <input id="q<%= q.id %>_<%= option.parameterize %>" type="radio" name="answers[<%= q.id %>]" value="<%= option %>" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" required>
                        <label for="q<%= q.id %>_<%= option.parameterize %>" class="ml-3 block text-sm font-medium text-gray-700">
                            <%= option %>
                        </label>
                    </div>
                    <% end %>
                    <% elsif q.question_type == 'multiple' %>
                    <% q.options.each do |option| %>
                    <div class="flex items-center">
                        <input id="q<%= q.id %>_<%= option.parameterize %>" type="checkbox" name="answers[<%= q.id %>][]" value="<%= option %>" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500">
                        <label for="q<%= q.id %>_<%= option.parameterize %>" class="ml-3 block text-sm font-medium text-gray-700">
                            <%= option %>
                        </label>
                    </div>
                    <% end %>
                    <% else %>
                    <textarea name="answers[<%= q.id %>]" id="q<%= q.id %>" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required></textarea>
                    <% end %>
                </div>
            </div>
            <% end %>
        </div>

        <!-- Step 2 -->
        <div data-questionnaire-target="step" class="hidden space-y-6">
            <% @questions[5..9].each do |q| %>
            <div class="p-6 bg-white rounded-lg shadow">
                <p class="font-medium mb-4"><%= q.position %>. <%= q.content %></p>
                <div class="space-y-3">
                    <% if q.question_type == 'radio' %>
                    <% q.options.each do |option| %>
                    <div class="flex items-center">
                        <input id="q<%= q.id %>_<%= option.parameterize %>" type="radio" name="answers[<%= q.id %>]" value="<%= option %>" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" required>
                        <label for="q<%= q.id %>_<%= option.parameterize %>" class="ml-3 block text-sm font-medium text-gray-700">
                            <%= option %>
                        </label>
                    </div>
                    <% end %>
                    <% elsif q.question_type == 'multiple' %>
                    <% q.options.each do |option| %>
                    <div class="flex items-center">
                        <input id="q<%= q.id %>_<%= option.parameterize %>" type="checkbox" name="answers[<%= q.id %>][]" value="<%= option %>" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500">
                        <label for="q<%= q.id %>_<%= option.parameterize %>" class="ml-3 block text-sm font-medium text-gray-700">
                            <%= option %>
                        </label>
                    </div>
                    <% end %>
                    <% else %>
                    <textarea name="answers[<%= q.id %>]" id="q<%= q.id %>" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required></textarea>
                    <% end %>
                </div>
            </div>
            <% end %>
        </div>

        <!-- Step 3 -->
