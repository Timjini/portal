<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="flex flex-col space-y-4" data-controller="calendar" data-calendar-user-id-value="<%= params[:id] %>">
    <p class="text-green-600 font-medium"><%= notice %></p>

    <button data-action="click->calendar#refresh" class="w-64 btn">
      <span class="material-symbols-outlined">
        sync
      </span>
      <span>Refresh Calendar</span>
    </button>

    <h1 class="text-3xl font-bold text-gray-800">Coach Calendar</h1>

    <div data-calendar-target="calendar" class="bg-white rounded-lg shadow p-4"></div>
  </div>
</div>
