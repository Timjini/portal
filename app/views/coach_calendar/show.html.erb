<div class="flex flex-col" data-controller="calendar" data-calendar-user-id-value="<%= params[:id] %>">
  <p style="color: green"><%= notice %></p>
  <button data-action="click->calendar#refresh" class="confirm-btn">
    <span class="material-symbols-outlined">
      sync
    </span> refresh calendar 
  </button>
  <h1 class="font-extrabold text-2xl text-gray-800">Coach Calendar</h1>
  <div data-calendar-target="calendar"></div>
</div>