                    <!-- Filter Form -->
                    <div class=" p-6 mb-6 rounded-lg">
                      <%= form_with url: attendance_index_path, method: :get, local: true, class: "flex flex-col md:flex-row items-end gap-4" do |f| %>

                        <div class="w-full md:w-auto flex-1">
                          <%= f.label :level, "Level", class: "block text-sm font-medium text-gray-700 mb-1" %>
                          <%= f.select :level, options_for_select([["All Levels", ""], ["Development", "development"], ["Intermediate", "intermediate"], ["Advanced", "advanced"]], params[:level]), {}, { class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" } %>
                        </div>

                        <div class="w-full md:w-auto flex-1">
                          <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
                          <%= f.text_field :name, value: params[:name], placeholder: "Full name", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
                        </div>

                        <div class="w-full md:w-auto mt-2">
                          <%= f.submit "Filter", class: "btn" %>
                        </div>
                      <% end %>
                    </div>