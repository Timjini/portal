<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">

 <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
        <div class="flex items-center gap-4 ">
            <%= render 'components/back_button' %>
             <div class="sm:flex-auto">
      <h1 class="text-2xl font-bold text-gray-900">Training System Dashboard</h1>
      <p class="mt-2 text-sm text-gray-700">Manage all aspects of your athlete training program</p>
    </div>
        </div>
    </div>

  <!-- Flash Message -->
  <% if notice.present? %>
    <div class="rounded-md bg-green-50 p-4 mb-6">
      <div class="flex items-center">
        <svg class="h-5 w-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <!-- Cards Grid -->
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Athlete Levels Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-blue-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Athlete Levels</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= AthleteLevel.count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="flex justify-between space-x-4">
          <%= link_to "View All", athlete_levels_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          <%= link_to "Add New", new_athlete_level_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
        </div>
      </div>
    </div>

    <!-- KPI Categories Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">KPI Categories</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= KpiCategory.count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="flex justify-between space-x-4">
          <%= link_to "View All", kpi_categories_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          <%= link_to "Add New", new_kpi_category_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
        </div>
      </div>
    </div>

    <!-- Athlete Level Categories Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Level Categories</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= AthleteLevelCategory.count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="flex justify-between space-x-4">
          <%= link_to "View All", athlete_level_categories_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          <%= link_to "Add New", new_athlete_level_category_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
        </div>
      </div>
    </div>

 <!-- Exercises Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Exercises</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= Exercise.count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="flex justify-between space-x-4">
          <%= link_to "View All", exercises_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          <%= link_to "Create New", new_exercise_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
        </div>
      </div>
    </div>
    
    <!-- Steps Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Training Steps</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= Step.count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="flex justify-between space-x-4">
          <%= link_to "View All", steps_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          <%= link_to "Configure", new_step_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
        </div>
      </div>
    </div>
    <!-- Step Exercises Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Step Exercises</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= StepExercise.count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-50 px-5 py-3">
        <div class="flex justify-between space-x-4">
          <%= link_to "View All", step_exercises_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          <%= link_to "Assign Exercises", new_step_exercise_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
        </div>
      </div>
    </div>

    <!-- Step Exercises Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Assessments</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= StepExercise.count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-50 px-5 py-3">
        <div class="flex justify-between space-x-4">
          <%= link_to "View All", coaches_assessments_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          <%
=begin%>
 <%= link_to "Assign Exercises", new_coaches_assessments_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %> 
<%
=end%>
        </div>
      </div>
    </div>
  </div>
</div>