<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
            <div class="flex items-center gap-4">
            <%= render 'components/back_button' %>
            <div class="sm:flex-auto">
                <h1 class="text-2xl font-bold text-gray-900">Athletes Assessments Hub</h1>
                <p class="mt-2 text-sm text-gray-700">Manage KPIs and athlete assignments</p>
            </div>
            </div>
        </div>

        <!-- KPI Search Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Select KPIs</h2>
            
            <!-- Search and Filter Controls -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
                <div class="md:col-span-1">
                    <input type="text" placeholder="Search KPIs..." class="w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <select class="w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">All Levels</option>
                        <option value="development">Development</option>
                        <option value="performance">Performance</option>
                        <option value="mastery">Mastery</option>
                    </select>
                </div>
                <div>
                    <select class="w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">All Categories</option>
                        <option value="information_management">Information Management</option>
                        <option value="technical_skills">Technical Skills</option>
                        <option value="tactical_skills">Tactical Skills</option>
                    </select>
                </div>
                <div>
                    <select class="w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">All Steps</option>
                        <option value="one">Step One</option>
                        <option value="two">Step Two</option>
                        <option value="three">Step Three</option>
                    </select>
                </div>
            </div>

            <!-- KPI Results Table -->
            <div class="overflow-x-auto rounded-lg border border-gray-200">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Level</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Step</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">KPI Title</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Development</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Information Management</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">One</td>
                            <td class="px-6 py-4 text-sm text-gray-900">Athlete stops what they are doing and focuses their attention on the coach when instructions are being given.</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button class="text-blue-600 hover:text-blue-900">Add</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Development</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Information Management</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">One</td>
                            <td class="px-6 py-4 text-sm text-gray-900">Athlete repeats instructions back to the coach when prompted to by the coach.</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button class="text-blue-600 hover:text-blue-900">Add</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Development</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Information Management</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">One</td>
                            <td class="px-6 py-4 text-sm text-gray-900">Athlete repeats instructions back to 1 peer chosen by the coach</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button class="text-blue-600 hover:text-blue-900">Add</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Selected KPIs -->
            <div class="mt-6">
                <h3 class="text-md font-medium text-gray-700 mb-2">Selected KPIs</h3>
                <div id="selected-kpis" class="flex flex-wrap gap-2 mt-2">
                    <!-- Selected KPI chips will appear here -->
                </div>
            </div>
        </div>

        <!-- Athlete Search Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Select Athletes</h2>
            
            <div class="flex gap-4 items-center mb-4">
                <input type="text" placeholder="Search Athletes..." class="w-full sm:w-1/3 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" id="user-search">
                <button class="btn">Add Athlete</button>
            </div>

            <!-- Selected Users -->
            <div class="mt-4">
                <h3 class="text-md font-medium text-gray-700 mb-2">Selected Athletes</h3>
                <div id="selected-users" class="flex flex-wrap gap-2">
                    <!-- Selected user chips will appear here -->
                </div>
            </div>
        </div>

        <!-- Save Section -->
        <div class="mt-6 flex justify-end">
            <button class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700">Save Selection</button>
        </div>
    </div>

    <script>
        // Simple JavaScript to demonstrate adding KPIs and athletes
        document.addEventListener('DOMContentLoaded', function() {
            // Add KPI functionality
            const addKpiButtons = document.querySelectorAll('table button');
            const selectedKpisContainer = document.getElementById('selected-kpis');
            
            addKpiButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const kpiText = this.closest('tr').querySelector('td:nth-child(4)').textContent;
                    const kpiChip = document.createElement('span');
                    kpiChip.className = 'px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm flex items-center';
                    kpiChip.innerHTML = `${kpiText} <button class="ml-2 text-blue-600 hover:text-blue-800"><i class="fas fa-times"></i></button>`;
                    
                    // Add remove functionality
                    kpiChip.querySelector('button').addEventListener('click', function() {
                        kpiChip.remove();
                    });
                    
                    selectedKpisContainer.appendChild(kpiChip);
                });
            });
            
            // Add Athlete functionality
            const addAthleteButton = document.querySelector('.bg-green-600');
            const athleteSearch = document.getElementById('user-search');
            const selectedUsersContainer = document.getElementById('selected-users');
            
            addAthleteButton.addEventListener('click', function() {
                if (athleteSearch.value.trim() !== '') {
                    const userChip = document.createElement('span');
                    userChip.className = 'px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm flex items-center';
                    userChip.innerHTML = `${athleteSearch.value} <button class="ml-2 text-green-600 hover:text-green-800"><i class="fas fa-times"></i></button>`;
                    
                    // Add remove functionality
                    userChip.querySelector('button').addEventListener('click', function() {
                        userChip.remove();
                    });
                    
                    selectedUsersContainer.appendChild(userChip);
                    athleteSearch.value = '';
                }
            });
        });
    </script>
</div>
