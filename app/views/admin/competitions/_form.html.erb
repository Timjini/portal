<%= form_with(model: [:admin, competition], class: "space-y-6 max-w-lg mx-auto" ) do |form| %>
  <% if competition.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 p-4 rounded-lg border border-red-100">
      <h2 class="font-bold text-lg">
        <%= pluralize(competition.errors.count, "error" ) %> prohibited this competition from being saved:
      </h2>
      <ul class="mt-2 list-disc list-inside">
        <% competition.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <!-- Title -->
      <div>
        <%= form.label :title, "Competition Title" , class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title, placeholder: "Enter competition title" , class: "mt-1 w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
               focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
      </div>

      <!-- Date -->
      <div>
        <%= form.label :date, "Competition Date" , class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :date, class: "mt-1 w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
               focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
      </div>

      <!-- Link -->
      <div>
        <%= form.label :link, "Competition Link" , class: "block text-sm font-medium text-gray-700" %>
          <%= form.url_field :link, placeholder: "https://example.com" , class: "mt-1 w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
               focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
      </div>

      <!-- Submit / Cancel -->
      <div class="pt-5 flex justify-end space-x-3">
        <%= link_to "Cancel" , admin_competitions_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium
               text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2
               focus:ring-blue-500" %>

          <%= form.submit "Save Competition" , class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium
               rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2
               focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
      <% end %>