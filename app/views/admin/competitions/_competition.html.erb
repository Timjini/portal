<tr id="<%= dom_id(competition) %>">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
    <%= competition.title.presence || "—" %>
  </td>

  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">
    <%= competition.date.present? ? competition.date.strftime("%B %d, %Y") : "—" %>
  </td>

  <td class="whitespace-nowrap px-3 py-4 text-sm text-blue-600">
    <% if competition.link.present? %>
      <a href="<%= competition.link %>" target="_blank" class="hover:underline break-all">
        <%= competition.link %>
      </a>
    <% else %>
      <span class="text-gray-400">—</span>
    <% end %>
  </td>

  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">
    <div class="flex items-center gap-2">
        <%= link_to admin_competition_path(competition),
            class: "text-blue-600 hover:text-blue-800 font-medium" do %>
            <%= render 'icons/eye' %>
        <% end %>

        <%= link_to edit_admin_competition_path(competition),
            class: "text-yellow-600 hover:text-yellow-700 font-medium" do %>
            <%= render 'icons/edit' %>
        <% end %>

        <%= button_to admin_competition_path(competition),
            method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this competition?" },
            class: "text-red-600 hover:text-red-700 font-medium bg-transparent border-none" do %>
            <%= render 'icons/trash' %>
        <% end %>
    </div>
  </td>
</tr>
