<%= form_with(model: step, class: "contents") do |form| %>
  <% if step.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
      <div class="flex items-center">
        <svg class="h-5 w-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <h2 class="text-lg font-medium text-red-800"><%= pluralize(step.errors.count, "error") %> prohibited this step from being saved:</h2>
      </div>
      <ul class="mt-2 list-disc pl-5 space-y-1 text-sm text-red-700">
        <% step.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:p-6 space-y-6">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900 border-b pb-2">Step Details</h3>
        </div>

        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <!-- Athlete Level Dropdown -->
          <div class="sm:col-span-3">
            <%= form.label :athlete_level_category_id, "Athlete Level", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <%= form.collection_select :athlete_level_category_id, AthleteLevel.all, :id, :name,
                { prompt: "Select an athlete level" },
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{step.errors[:athlete_level_category_id].any? ? 'border-red-300 text-red-900' : ''}"
              %>
              <% if step.errors[:athlete_level_category_id].any? %>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
            <% if step.errors[:athlete_level_category_id].any? %>
              <p class="mt-2 text-sm text-red-600"><%= step.errors[:athlete_level_category_id].first %></p>
            <% end %>
          </div>
          <!-- Step Number -->
          <div class="sm:col-span-2">
            <%= form.label :step_number, "Step Number", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <%= form.number_field :step_number, 
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{step.errors[:step_number].any? ? 'border-red-300 text-red-900' : ''}",
                  min: 1,
                  max: 5,
                  placeholder: "1-5" %>
              <% if step.errors[:step_number].any? %>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
            <% if step.errors[:step_number].any? %>
              <p class="mt-2 text-sm text-red-600"><%= step.errors[:step_number].first %></p>
            <% else %>
              <p class="mt-2 text-sm text-gray-500">Enter a number between 1 and 5</p>
            <% end %>
          </div>
        </div>
      </div>

      <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
        <%= link_to "Cancel", steps_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 ml-2" %>
      </div>
    </div>
  </div>
<% end %>