<div class="max-w-xl mx-auto mt-10" 
     data-controller="user-search-by-level"
     data-user-search-by-level-url-value="<%= search_user_by_level_path %>"
     data-user-search-by-level-level-id-value="<%= @levels.id %>">

  <!-- Level Notice -->
  <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
    <p class="text-sm text-blue-700 font-semibold">Searching users for Level:</p>
    <p class="text-sm text-blue-600 mt-1">
      <strong>Degree:</strong> <%= @levels.degree.humanize %>  
      · <strong>Category:</strong> <%= @levels.category.humanize %>  
      · <strong>Step:</strong> <%= @levels.step.humanize %>
    </p>
  </div>

  <!-- Search Box -->
  <div class="relative">
    <input type="text" placeholder="Search for users..."
           data-user-search-by-level-target="input"
           data-action="input->user-search-by-level#search"
           class="w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-4 py-3 shadow-sm">
    <button class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
           viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1010.5 18.5a7.5 7.5 0 006.15-3.85z"/>
      </svg>
    </button>
  </div>

  <!-- Search Results -->
  <div class="mt-2" data-user-search-by-level-target="results"></div>

  <!-- Selected Users Container -->
  <div class="flex flex-col mt-6" data-user-search-by-level-target="selected">
    <div class="flex flex-col items-center justify-center py-10 text-center border border-dashed border-gray-300 rounded-lg bg-gray-50 mt-6">
      <svg class="w-10 h-10 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M5.121 17.804A7 7 0 1117 10h-4l1.293-1.293a1 1 0 10-1.414-1.414L10 10l2.879 2.879a1 1 0 101.414-1.414L12.414 10H17a5 5 0 10-9.879 1.804z"/>
      </svg>
      <p class="text-gray-600 font-medium">No users selected</p>
      <p class="text-sm text-gray-400">Search and pick users to assign.</p>
    </div>
  </div>

</div>
