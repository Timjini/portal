<div class="max-w-4xl mx-auto mt-10">
<!-- Header -->
        <header class="mb-8">
            <h1 class="text-2xl font-bold text-gray-800">Athletes Assessment</h1>
            <p class="text-gray-600">Track your athletes' KPIs</p>
        </header>

<!-- STEP 1 Get KPIs -->

  <%= render 'coaches/assessments/partials/get_kpi_form' %>

<!-- END STEP 1      -->
  <%= turbo_frame_tag "levels" do %>
