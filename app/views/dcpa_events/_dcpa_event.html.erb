            <div class="max-w-4xl mx-auto">
              <h3 class="text-2xl font-bold text-gray-800 mb-6">DCPA Event Details</h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Image Card -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                  <div class="p-6">
                    <h4 class="text-lg font-semibold text-gray-700 mb-4">Event Image</h4>
                    <%= image_tag dcpa_event.image_thumbnail, class: "w-full h-48 object-cover rounded-lg" %>
                  </div>
                </div>

                <!-- Basic Info Card -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                  <div class="p-6">
                    <h4 class="text-lg font-semibold text-gray-700 mb-4">Event Information</h4>
                    <div class="space-y-4">
                      <div>
                        <p class="text-sm font-medium text-gray-500">Title</p>
                        <p class="text-lg font-semibold text-gray-800"><%= dcpa_event.title %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Coach</p>
                        <p class="text-lg text-gray-800"><%= dcpa_event.coach %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Event Type</p>
                        <p class="text-lg text-gray-800"><%= dcpa_event.event_type %></p>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Schedule Card -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                  <div class="p-6">
                    <h4 class="text-lg font-semibold text-gray-700 mb-4">Schedule</h4>
                    <div class="space-y-4">
                      <div>
                        <p class="text-sm font-medium text-gray-500">Dates</p>
                        <% if dcpa_event.dates.present? %>
                          <ul class="space-y-1">
                            <% dcpa_event.dates.each do |date| %>
                              <li class="text-gray-800 flex items-center">
                                <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <%= date %>
                              </li>
                            <% end %>
                          </ul>
                        <% else %>
                          <p class="text-gray-500">No dates available</p>
                        <% end %>
                      </div>
                      <div class="grid grid-cols-2 gap-4">
                        <div>
                          <p class="text-sm font-medium text-gray-500">Start Time</p>
                          <p class="text-gray-800">
                            <%= dcpa_event.time_start.strftime('%I:%M %p') if dcpa_event.time_start %>
                          </p>
                        </div>
                        <div>
                          <p class="text-sm font-medium text-gray-500">End Time</p>
                          <p class="text-gray-800">
                            <%= dcpa_event.time_end.strftime('%I:%M %p') if dcpa_event.time_end %>
                          </p>
                        </div>
                      </div>
                      <% if !dcpa_event.status.nil? %>
                        <div class="px-3 py-1 rounded-full text-sm font-medium <%= dcpa_event.status_color(dcpa_event.status)%>">
                          DCPA Discount: <%= dcpa_event.status %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>

                <!-- Location Card -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                  <div class="p-6">
                    <h4 class="text-lg font-semibold text-gray-700 mb-4">Location</h4>
                    <div class="space-y-4">
                      <div>
                        <p class="text-sm font-medium text-gray-500">Venue</p>
                        <p class="text-lg text-gray-800"><%= dcpa_event.location %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Ages Available</p>
                        <p class="text-lg text-gray-800"><%= dcpa_event.ages_available %></p>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Pricing Card -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                  <div class="p-6">
                    <h4 class="text-lg font-semibold text-gray-700 mb-4">Pricing</h4>
                    <div class="space-y-4">
                      <div class="flex justify-between items-center">
                        <div>
                          <p class="text-sm font-medium text-gray-500">Standard Price</p>
                          <p class="text-xl font-bold text-gray-800"><%= dcpa_event.price %></p>
                        </div>
                        <% if dcpa_event.dcpa_discount.present? %>
                          <div class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                            DCPA Discount: <%= dcpa_event.dcpa_discount %>
                          </div>
                        <% end %>
                      </div>
                      <% if dcpa_event.extras.present? %>
                        <div>
                          <p class="text-sm font-medium text-gray-500">Extras Included</p>
                          <p class="text-gray-800"><%= dcpa_event.extras %></p>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>