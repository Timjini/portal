<script>
  // Simple filter functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filters = document.querySelectorAll('.achievement-filter');
    
    filters.forEach(filter => {
      filter.addEventListener('click', function() {
        // Remove active class from all filters
        filters.forEach(f => f.classList.remove('active', 'bg-blue-600', 'text-white'));
        filters.forEach(f => f.classList.add('bg-white', 'border', 'text-gray-700'));
        
        // Add active class to clicked filter
        this.classList.add('active', 'bg-blue-600', 'text-white');
        this.classList.remove('bg-white', 'border', 'text-gray-700');
      });
    });
  });
</script>