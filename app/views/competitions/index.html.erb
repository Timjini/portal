<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div class="flex items-center gap-4">
      <%= link_to :back, class: "inline-flex items-center gap-2 rounded-lg px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-all duration-200 border border-gray-300 shadow-sm hover:shadow-md" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.8" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        <span>Back</span>
      <% end %>
      
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Competitions</h1>
        <p class="text-sm text-gray-600 mt-1">Manage and track all competitions</p>
      </div>
    </div>

    <% if @current_user.role == 'coach' || @current_user.role == 'admin' %>
    <div class="flex-shrink-0">
      <%= link_to "New competition", new_competition_path, class: "btn" %>
    </div>
    <%end%>
  </div>

  <!-- Notice Alert -->
  <% if notice.present? %>
    <div class="mb-6 rounded-lg bg-green-50 p-4 border border-green-200">
      <p class="text-green-800 font-medium" id="notice">
        <svg class="inline w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <%= notice %>
      </p>
    </div>
  <% end %>

  <!-- Competitions Grid -->
  <div id="competitions">
    <% if @competitions.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @competitions.each do |competition| %>
          <%= render competition %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
        <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-blue-100 flex items-center justify-center">
          <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">No competitions found</h3>
        <p class="text-gray-600 max-w-md mx-auto mb-6">
          Get started by creating your first competition to organize events and track participants.
        </p>
        <% if @current_user.role == 'coach' || @current_user.role == 'admin' %>
        <div class="flex gap-3 justify-center">
          <%= link_to "New competition", new_competition_path, class: "btn" %>
          <%= link_to "Learn more", "#", class: "inline-flex items-center justify-center rounded-lg bg-gray-100 px-6 py-3 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all duration-200" %>
        </div>
        <%end%>
      </div>
    <% end %>
  </div>
</div>