<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">

 <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
 <div class="flex items-center gap-4">
 <%= link_to :back, class: "inline-flex items-center gap-2.5 rounded-lg px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-all duration-200 border border-gray-200 shadow-xs" do %>
   <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.8" stroke="currentColor" class="w-5 h-5">
     <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
   </svg>
   <span>Back</span>
 <% end %>
 
 <h1 class="text-2xl font-semibold text-gray-800">DCPA Events</h1>
</div>

<div>
 <%= link_to "New competition", new_competition_path, class: "btn" %>
</div>
    </div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="competitions" class="min-w-full">
  <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
  <table class="min-w-full divide-y divide-gray-300">
    <thead class="bg-gray-50">
      <tr>
        <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">title</th>
        <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">date</th>
        <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">link</th>
        <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
    <% if @competitions.any? %>
    <% @competitions.each do |competition| %>
      <%= render competition %>
    <% end %>
  <% else %>
    <p class="text-center my-10">No competitions found.</p>
  <% end %>
    </tbody>
  </table>
</div>

  </div>
</div>

</div>