<% content_for :title, @competition.title.presence || "Competition Details" %>

<div class="max-w-6xl mx-auto mt-10 space-y-6">
  <% if notice.present? %>
    <p id="notice" class="py-3 px-4 bg-green-50 border border-green-200 text-green-700 font-medium rounded-lg">
      <%= notice %>
    </p>
  <% end %>

  <!-- Competition Header -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6 space-y-4">
    <h1 class="text-2xl font-bold text-gray-900">
      <%= @competition.title %>
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-700">
      <div>
        <span class="font-medium text-gray-500 block">Date</span>
        <p class="mt-1">
          <%= @competition.date.present? ? @competition.date.strftime("%B %d, %Y") : "—" %>
        </p>
      </div>

      <div>
        <span class="font-medium text-gray-500 block">Link</span>
        <% if @competition.link.present? %>
          <a href="<%= @competition.link %>" target="_blank" class="mt-1 text-blue-600 hover:underline break-all">
            <%= @competition.link %>
          </a>
        <% else %>
          <p class="mt-1">—</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Participating Users Section -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-semibold text-gray-900">Participants</h2>
      <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
        <%= @competition.competition_entries.size %> participants
      </span>
    </div>

    <% if @competition.competition_entries.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @competition.competition_entries.each do |entry| %>
          <% user = entry.user %>
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 hover:border-gray-300 transition-colors duration-200">
            <div class="flex items-center space-x-3">
              <!-- User Avatar -->
              <div class="flex-shrink-0">
                <% if user.avatar_thumbnail.present? %>
                  <%= image_tag user.avatar_thumbnail, 
                        class: "w-12 h-12 rounded-full object-cover border-2 border-white shadow-sm",
                        alt: "#{user.first_name} #{user.last_name}" %>
                <% else %>
                  <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-semibold text-sm shadow-sm" 
                       style="background-color: <%= user.color || '#6b7280' %>">
                    <%= user.first_name[0].upcase %><%= user.last_name[0].upcase %>
                  </div>
                <% end %>
              </div>

              <!-- User Info -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-2">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= user.first_name %> <%= user.last_name %>
                  </p>
                  <% if user.role == "admin" %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                      Admin
                    </span>
                  <% end %>
                </div>
                <p class="text-sm text-gray-500 truncate">
                  @<%= user.username %>
                </p>
                <div class="flex items-center space-x-4 mt-1">
                  <% if user.phone.present? %>
                    <span class="inline-flex items-center text-xs text-gray-400">
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                      <%= user.phone %>
                    </span>
                  <% end %>
                  <% if user.active? %>
                    <span class="inline-flex items-center text-xs text-green-600">
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      Active
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Additional User Details -->
            <div class="mt-3 pt-3 border-t border-gray-200">
              <% if user.address.present? %>
                <div class="flex items-start space-x-2 text-xs text-gray-500">
                  <svg class="w-3 h-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="flex-1"><%= user.address.truncate(40) %></span>
                </div>
              <% end %>

              <div class="flex items-center justify-between mt-2 text-xs text-gray-400">
                <span>Joined <%= time_ago_in_words(user.created_at) %> ago</span>
                <span>Logins: <%= user.user_logins.count %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <%= render 'icons/users_path'%>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No participants yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by inviting users to join this competition.</p>
      </div>
    <% end %>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-end space-x-3 pt-4">
    <%= link_to "Edit", edit_competition_path(@competition),
      class: "px-4 py-2 bg-blue-50 text-blue-700 hover:bg-blue-100 border border-blue-200 rounded-md font-medium text-sm transition-colors duration-200"
    %>

    <%= link_to "Back", competitions_path,
      class: "px-4 py-2 bg-gray-50 text-gray-700 hover:bg-gray-100 border border-gray-200 rounded-md font-medium text-sm transition-colors duration-200"
    %>

    <%= button_to "Delete", competition_path(@competition), method: :delete, data: {
      turbo_confirm: "Are you sure you want to delete this competition?" },
      class: "px-4 py-2 bg-red-600 text-white hover:bg-red-700 rounded-md font-medium text-sm transition-colors duration-200" %>
  </div>
</div>