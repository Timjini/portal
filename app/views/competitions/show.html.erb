<% content_for :title, @competition.title.presence || "Competition Details" %>

<div class="max-w-3xl mx-auto mt-10 space-y-6">
  <% if notice.present? %>
    <p id="notice" class="py-3 px-4 bg-green-50 border border-green-200 text-green-700 font-medium rounded-lg">
      <%= notice %>
    </p>
  <% end %>

  <div class="bg-white shadow-sm rounded-xl border border-gray-100 p-6 space-y-4">
    <h1 class="text-2xl font-bold text-gray-900"><%= @competition.title %></h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-700">
      <div>
        <span class="font-medium text-gray-500 block">Date</span>
        <p class="mt-1"><%= @competition.date.present? ? @competition.date.strftime("%B %d, %Y") : "—" %></p>
      </div>

      <div>
        <span class="font-medium text-gray-500 block">Link</span>
        <% if @competition.link.present? %>
          <a href="<%= @competition.link %>" target="_blank" class="mt-1 text-blue-600 hover:underline break-all">
            <%= @competition.link %>
          </a>
        <% else %>
          <p class="mt-1">—</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <%= link_to "Edit", edit_competition_path(@competition),
          class: "px-4 py-2 bg-blue-50 text-blue-700 hover:bg-blue-100 border border-blue-200 rounded-md font-medium text-sm" %>

    <%= link_to "Back", competitions_path,
          class: "px-4 py-2 bg-gray-50 text-gray-700 hover:bg-gray-100 border border-gray-200 rounded-md font-medium text-sm" %>

    <%= button_to "Delete", @competition, method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this competition?" },
          class: "px-4 py-2 bg-red-600 text-white hover:bg-red-700 rounded-md font-medium text-sm" %>
  </div>
</div>
