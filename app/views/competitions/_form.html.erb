<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 space-y-8">
    <h2 class="text-2xl font-semibold text-gray-800 text-center">Competition Details</h2>

    <%= form_with(model: competition, local: true, class: "space-y-8") do |form| %>

      <% if competition.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-600 p-4 rounded-lg border border-red-100">
          <h2 class="font-semibold text-lg">
            <%= pluralize(competition.errors.count, "error") %> prevented this competition from being saved:
          </h2>
          <ul class="mt-2 list-disc list-inside text-sm">
            <% competition.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <!-- Text Inputs -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div class="col-span-2">
          <%= form.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :title, placeholder: "Enter competition title", class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5" %>
        </div>

        <div class="col-span-2">
          <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :description, rows: 3, placeholder: "Add details about the competition...", class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5" %>
        </div>

        <div>
          <%= form.label :date, "Competition Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :date, class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5" %>
        </div>

        <div>
          <%= form.label :link, "Official Link", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.url_field :link, placeholder: "https://example.com", class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5" %>
        </div>

        <div class="w-36">
          <%= form.label :status, "Status", class: "block mb-2 text-sm font-medium" %>
          <%= form.select :status, options_for_select(Competition.statuses.map { |k, v| [k.humanize.capitalize, v] }), {}, class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5" %>
        </div>
      </div>

      <!-- Buttons -->
      <div class="flex justify-end gap-4 pt-6 border-t border-gray-100">
        <%= link_to "Cancel", competitions_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg border border-gray-300 transition" %>
        <%= form.submit "Save Competition", class: "btn", data: { turbo_submits_with: 'Saving...' } %>
      </div>

    <% end %>
  </div>
</div>
