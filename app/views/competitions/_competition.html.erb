<div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300 group">
  <!-- Competition Image -->
  <div class="relative h-48 bg-gradient-to-br from-blue-500 to-purple-600 overflow-hidden">
    <!-- You can replace this with actual competition images -->
    <%= image_tag competition.competition_thumbnail, class: "" %>
    <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
    <div class="absolute bottom-4 left-4 text-white bg-gray-300 rounded-xl p-2">
      <h3 class="text-xl font-bold mb-1"><%= competition.title %></h3>
      <div class="flex items-center text-sm text-white/90">
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <%= competition.date.strftime("%B %d, %Y") %>
      </div>
    </div>
    <!-- Status Badge -->
    <div class="absolute top-4 right-4">
      <%= status_chip(competition) %>
    </div>
  </div>

  <!-- Card Content -->
  <div class="p-6">
    <!-- Quick Stats -->
    <div class="grid grid-cols-2 gap-4 mb-4">
      <div class="text-center p-3 bg-blue-50 rounded-lg">
        <div class="text-2xl font-bold text-blue-600"><%= competition.participants %></div>
        <div class="text-xs text-blue-500 font-medium"><%= competition.participants %> Participants</div>
      </div>
      <div class="hidden text-center p-3 bg-purple-50 rounded-lg">
        <div class="text-2xl font-bold text-purple-600">0</div>
        <div class="text-xs text-purple-500 font-medium">Teams</div>
      </div>
    </div>

    <!-- Description (if available) -->
    <% if competition.description.present? %>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  <%= competition.description %>
                </p>
              <% else %>
                <p class="text-gray-500 text-sm mb-4 italic">
                  No description provided
                </p>
              <% end %>


    <!-- Action Buttons -->
    <div class="flex gap-2 mb-4">
      <%= link_to competition.link, target:"_blank", class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 rounded-lg border border-blue-200 transition-all duration-200 group/link" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        View Details
      <% end %>
    </div>

    <!-- Admin Actions -->
   <!-- Admin Actions -->
  <div class="flex flex-col gap-3 pt-4 border-t border-gray-100">
    <% if current_user.role == 'coach' || current_user.role == 'admin' %>
    <div class="flex gap-2">
       <%= link_to "Show", competition_path(competition),
        class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-200 transition-all duration-200 hover:shadow-sm" %>

      <%= link_to "Edit", edit_competition_path(competition),
        class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-gray-700 bg-blue-100 hover:bg-gray-100 rounded-lg border border-gray-200 transition-all duration-200 hover:shadow-sm" %>
      
      <%= link_to "Delete", competition_path(competition),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this competition?" },
        class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 rounded-lg border border-red-200 transition-all duration-200 hover:shadow-sm" %>
    </div>
    <%end%>

    <!-- Submit Button -->
    <% if competition.subscribed?(current_user) %>
      <button class="btn-secondary bg-gray-400 text-white px-4 py-2 rounded" disabled>
        Registered
      </button>
    <% elsif ["coach", "admin"].include?(current_user.role) %>
    <button class="btn-secondary bg-gray-400 text-white px-4 py-2 rounded" disabled>
      Not Available for <%= current_user.role.titleize %>s
    </button>
    <% else %>
      <%= form_with model: [competition, CompetitionEntry.new], class:"w-full" do |f| %>
      <%= f.submit "Participate", class:"btn w-full", data:{turbo_confirm: 'Please make sure that you have subscribed on the link provided?',turbo_submits_with: 'Saving...'} %>
      <%end%>
    <%end%>
    </div>
  </div>
</div>