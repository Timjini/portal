
  <%= render 'components/back_button'%>

<%= form_with(model: @qr_code, url: qr_codes_path, method: :post, local: true) do |form| %>
<div class="form w-96  mt-2 p-5">
  <div class="mb-4">
    <%= form.label :user_id, class: "block text-sm font-medium " %>
    <%= form.number_field :user_id, class: "mt-1 p-2 w-full border rounded-md bg-gray-600" %>
  </div>

  <div class="mb-4">
    <%= form.label :data, class: "block text-sm font-medium " %>
    <%= form.text_field :data, class: "mt-1 p-2 w-full border rounded-md bg-gray-600", placeholder: "Enter QR code data" %>
  </div>

  <div class="mb-4">
    <%= form.label :scanned, class: "block text-sm font-medium " %>
    <%= form.check_box :scanned, class: "mt-1" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Generate QR Code", class: "btn p-5" %>
  </div>
<% end %>
</div>
<div class="mt-5">

<h3> QR Codes </h3>
<%@qr_codes.each do |qr|%>
<div class="flex flex-row flex-wrap gap-5 m-2">
<%= image_tag qr.image , class:"w-64 h-64" if qr.image.attached? %> 
</div>
<%end%>
</div>