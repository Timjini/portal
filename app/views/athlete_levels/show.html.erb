<% content_for :title, "Showing athlete level" %>

<div class="min-h-screen flex flex-col items-center justify-center p-4 ">
  <div class="max-w-4xl w-full  rounded-xl  p-8">
    <% if notice.present? %>
      <div class="mb-6 py-3 px-4 bg-green-100 text-green-700 rounded-lg text-center">
        <%= notice %>
      </div>
    <% end %>

    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">Athlete Level Details</h1>
      <div class="w-20 h-1 bg-blue-500 mx-auto"></div>
    </div>

    <div class="mb-8">
      <%= render @athlete_level %>
    </div>

    <div class="flex flex-col sm:flex-row justify-center gap-4 mt-8 pt-6 border-t border-gray-200">
      <%= link_to "Edit this athlete level", 
                  edit_athlete_level_path(@athlete_level), 
                  class: "px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm text-center transition-colors" %>
      
      <%= link_to "Back to athlete levels", 
                  athlete_levels_path, 
                  class: "px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg shadow-sm text-center transition-colors" %>
      
      <%= button_to "Delete this athlete level", 
                  @athlete_level, 
                  method: :delete, 
                  form: { class: "contents" },
                  data: { turbo_confirm: "Are you sure you want to delete this athlete level?" },
                  class: "px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg shadow-sm text-center transition-colors" %>
    </div>
  </div>
</div>