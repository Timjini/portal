<%= form_with(model: athlete_level, class: "contents") do |form| %>
  <% if athlete_level.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(athlete_level.errors.count, "error") %> prohibited this athlete_level from being saved:</h2>

      <ul class="list-disc ml-6">
        <% athlete_level.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": athlete_level.errors[:name].none?, "border-red-400 focus:outline-red-600": athlete_level.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.number_field :position, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": athlete_level.errors[:position].none?, "border-red-400 focus:outline-red-600": athlete_level.errors[:position].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": athlete_level.errors[:description].none?, "border-red-400 focus:outline-red-600": athlete_level.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :min_age %>
    <%= form.number_field :min_age, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": athlete_level.errors[:min_age].none?, "border-red-400 focus:outline-red-600": athlete_level.errors[:min_age].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :max_age %>
    <%= form.number_field :max_age, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": athlete_level.errors[:max_age].none?, "border-red-400 focus:outline-red-600": athlete_level.errors[:max_age].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :color %>
    <%= form.text_field :color, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": athlete_level.errors[:color].none?, "border-red-400 focus:outline-red-600": athlete_level.errors[:color].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :active %>
    <%= form.check_box :active, class: ["block shadow rounded-md border outline-none mt-2 h-5 w-5", {"border-gray-400 focus:outline-blue-600": athlete_level.errors[:active].none?, "border-red-400 focus:outline-red-600": athlete_level.errors[:active].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
