 <style>
    .progress {
        height: 5px;
        width: 100%;
        background-color: grey;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .progress-bar {
        height: 100%;
        text-align: center;
        line-height: 10px;
        color: green;
        background-color: #007bff;
    }
</style>
<%= render 'components/back_button'%>
<%= render 'athlete_profiles/athlete_profile_card'%> 

 <div class="progress">
    <div class="progress-bar" role="progressbar" style="width: <%= @percentage %>%;" aria-valuenow="<%= @percentage %>" aria-valuemin="0" aria-valuemax="100"></div>
</div> 

 <%= render 'athlete_profiles/athlete_data'%> 


<div class="min-h-scree p-4 md:p-6 hidden">
<% if current_user.admin?%>
  <%= render 'components/back_button'%>
<%else%>
  <!-- Profile Header -->
  <div class="flex flex-col items-center text-center mb-8">
    <!-- Avatar Customization -->
    <div class="relative group mb-4">
      <div class="w-32 h-32 rounded-full bg-gradient-to-r from-blue-400 to-purple-500 flex items-center justify-center overflow-hidden border-4 border-white shadow-lg">
        <%= image_tag(@athlete.user.avatar_thumbnail, class:'w-full h-full object-cover' )%>
      </div>
      <a href="/users/edit/<%=@athlete.user.id%>" class="absolute bottom-0 right-0 bg-white rounded-full p-1 shadow-md hover:bg-gray-100 transition-all cursor-pointer">
        <span class="material-symbols-outlined text-blue-600">edit</span>
      </a>
    </div>
    
    <h1 class="text-3xl font-bold text-gray-900"><%= @athlete.user.full_name%></h1>
    <p class="text-gray-600 hidden">U14 Soccer Â· Blue Dragons</p>
    <div class="mt-2 flex gap-1">
      <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full flex items-center gap-1">
        <span class="material-symbols-outlined text-sm">military_tech</span>
        Level <%=@athlete.level%>
      </span>
      <span class="hidden bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full flex items-center gap-1">
        <span class="material-symbols-outlined text-sm">star</span>
        Rising Star
      </span>
    </div>
  </div>
  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Goals & Milestones -->
    <div class="bg-white rounded-2xl shadow-sm p-6">
      <h2 class="text-xl font-semibold text-gray-900 flex items-center gap-2 mb-6">
        <span class="text-blue-600">
          <span class="material-symbols-outlined">flag</span>
        </span>
        My Goals
      </h2>
      
      <div class="space-y-4">
        <!-- Current Goal -->
        <div class="bg-blue-50 p-4 rounded-xl border-l-4 border-blue-400">
          <div class="flex justify-between items-start">
            <div>
              <p class="font-medium">Improve Dribbling Speed</p>
              <p class="text-sm text-gray-600 mt-1">Target: Complete cone drill in under 30s</p>
              <div class="flex items-center gap-2 mt-3">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-blue-600 h-2 rounded-full" style="width: 65%"></div>
                </div>
                <span class="text-sm font-medium text-blue-600">65%</span>
              </div>
            </div>
            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">Active</span>
          </div>
        </div>
        
        <!-- Next Milestone -->
        <div class="bg-purple-50 p-4 rounded-xl border-l-4 border-purple-400">
          <div class="flex items-start gap-3">
            <span class="material-symbols-outlined text-purple-500 mt-0.5">emoji_events</span>
            <div>
              <p class="font-medium">Next Milestone</p>
              <p class="text-sm text-gray-600 mt-1">Reach Level 7 (200 pts needed)</p>
              <div class="flex gap-2 mt-2">
                <span class="w-6 h-6 bg-purple-100 text-purple-600 rounded-full flex items-center justify-center text-xs">3</span>
                <span class="text-xs text-gray-600 self-center">skills to improve</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Completed Goals -->
        <div class="border border-gray-200 rounded-xl p-4">
          <div class="flex justify-between items-center">
            <p class="font-medium">Completed Goals</p>
            <button class="text-blue-600 text-sm">View All</button>
          </div>
          <div class="grid grid-cols-2 gap-2 mt-3">
            <div class="bg-green-50 p-2 rounded-lg text-center">
              <span class="material-symbols-outlined text-green-500 text-xl">check_circle</span>
              <p class="text-xs mt-1">Shooting Accuracy</p>
            </div>
            <div class="bg-green-50 p-2 rounded-lg text-center">
              <span class="material-symbols-outlined text-green-500 text-xl">check_circle</span>
              <p class="text-xs mt-1">Stamina</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Skill Levels -->
    <div class="bg-white rounded-2xl shadow-sm p-6">
      <h2 class="text-xl font-semibold text-gray-900 flex items-center gap-2 mb-6">
        <span class="text-yellow-500">
          <span class="material-symbols-outlined">insights</span>
        </span>
        My Skills
      </h2>
      
      <div class="space-y-4 hidden">
        <!-- Skill 1 -->
        <div>
          <div class="flex justify-between mb-1">
            <p class="font-medium">Ball Control</p>
            <p class="text-sm font-medium">Advanced</p>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2.5">
            <div class="bg-blue-600 h-2.5 rounded-full" style="width: 82%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-1">Coach: "Excellent dribbling in tight spaces"</p>
        </div>
        
        <!-- Skill 2 -->
        <div>
          <div class="flex justify-between mb-1">
            <p class="font-medium">Shooting Accuracy</p>
            <p class="text-sm font-medium">Intermediate</p>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2.5">
            <div class="bg-green-600 h-2.5 rounded-full" style="width: 68%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-1">+12% since last month</p>
        </div>
        
        <!-- Skill 3 -->
        <div>
          <div class="flex justify-between mb-1">
            <p class="font-medium">Game Vision</p>
            <p class="text-sm font-medium">Developing</p>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2.5">
            <div class="bg-yellow-600 h-2.5 rounded-full" style="width: 45%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-1">Focus: Passing decisions</p>
        </div>
        
        <!-- Skill 4 -->
        <div>
          <div class="flex justify-between mb-1">
            <p class="font-medium">Stamina</p>
            <p class="text-sm font-medium">Intermediate</p>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2.5">
            <div class="bg-purple-600 h-2.5 rounded-full" style="width: 72%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-1">Maintain intensity for full match</p>
        </div>
        
        <button class="w-full mt-4 bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-4 rounded-lg text-sm font-medium flex items-center justify-center gap-2">
          <span class="material-symbols-outlined text-sm">bar_chart</span>
          View Detailed Progress
        </button>
      </div>
    </div>

    <!-- Favorite Drills & Activities -->
    <div class="bg-white rounded-2xl shadow-sm p-6">
      <h2 class="text-xl font-semibold text-gray-900 flex items-center gap-2 mb-6">
        <span class="text-red-500">
          <span class="material-symbols-outlined">favorite</span>
        </span>
        Favorite Drills
      </h2>
      
      <div class="space-y-3 hidden">
        <!-- Drill 1 -->
        <div class="flex items-start gap-3 p-3 bg-blue-50 rounded-lg">
          <span class="material-symbols-outlined text-blue-500 mt-0.5">sports_soccer</span>
          <div>
            <p class="font-medium">Cone Dribbling Challenge</p>
            <p class="text-sm text-gray-600">Improves close ball control at speed</p>
            <div class="flex gap-2 mt-2">
              <span class="text-xs bg-white text-blue-600 px-2 py-1 rounded-full">Personal Best: 28s</span>
            </div>
          </div>
        </div>
        
        <!-- Drill 2 -->
        <div class="flex items-start gap-3 p-3 bg-green-50 rounded-lg">
          <span class="material-symbols-outlined text-green-500 mt-0.5">target</span>
          <div>
            <p class="font-medium">Precision Shooting</p>
            <p class="text-sm text-gray-600">5-spot accuracy challenge</p>
            <div class="flex gap-2 mt-2">
              <span class="text-xs bg-white text-green-600 px-2 py-1 rounded-full">80% success rate</span>
            </div>
          </div>
        </div>
        
        <!-- Drill 3 -->
        <div class="flex items-start gap-3 p-3 bg-purple-50 rounded-lg">
          <span class="material-symbols-outlined text-purple-500 mt-0.5">timer</span>
          <div>
            <p class="font-medium">Endurance Circuit</p>
            <p class="text-sm text-gray-600">Combines sprints with ball work</p>
            <div class="flex gap-2 mt-2">
              <span class="text-xs bg-white text-purple-600 px-2 py-1 rounded-full">3 rounds</span>
            </div>
          </div>
        </div>
        
        <button class="w-full mt-4 bg-gradient-to-r from-blue-400 to-purple-400 hover:from-blue-500 hover:to-purple-500 text-white py-2 px-4 rounded-lg flex items-center justify-center gap-2">
          <span class="material-symbols-outlined">add</span>
          Add New Favorite
        </button>
      </div>
      
      <!-- Recent Activity -->
      <div class="mt-8">
        <h3 class="font-medium text-gray-900 mb-3 flex items-center gap-2">
          <span class="material-symbols-outlined text-gray-500">history</span>
          Recent Activity
        </h3>
        <ul class="space-y-2 text-sm hidden">
          <li class="flex items-start gap-2">
            <span class="material-symbols-outlined text-green-500 text-sm">check_circle</span>
            <span>Completed Cone Drill (32s) - May 28</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="material-symbols-outlined text-blue-500 text-sm">stars</span>
            <span>Earned "Precision Shooter" badge - May 26</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="material-symbols-outlined text-purple-500 text-sm">trending_up</span>
            <span>Stamina improved to Level 4 - May 24</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
<%end%>
</div>