<% if @user.children.any? %>
  <% @user.children.each do |child| %>
    <a href="/users/<%=child.id%>" class="block p-3 hover:bg-blue-50 rounded-lg transition-colors duration-150">
      <div class="flex items-center gap-3">
        <%= image_tag(child.avatar_thumbnail || 'default-avatar.jpg',
                      class: "w-10 h-10 rounded-full object-cover") %>
        <span class="font-medium text-blue-600 hover:text-blue-800 transition-colors duration-150">
          <%= child.full_name %>
        </span>
      </div>
    </a>
  <% end %>
<% else %>
  <p class="text-gray-500">No children found</p>
<% end %>
