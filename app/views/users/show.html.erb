  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .tab-active {
      border-bottom: 3px solid #dc2626;
      color: #dc2626;
      font-weight: 600;
    }
    .notification-dot {
      width: 18px;
      height: 18px;
      border-radius: 50%;
      background: #ef4444;
      color: white;
      font-size: 0.7rem;
      # display: flex;
      # align-items: center;
      # justify-content: center;
    }
    .chat-bubble {
      max-width: 70%;
      border-radius: 1rem;
      padding: 0.75rem 1rem;
      margin: 0.5rem 0;
    }
    .chat-bubble.self {
      background-color: #dc2626;
      color: white;
      margin-left: auto;
    }
    .chat-bubble.other {
      background-color: #f3f4f6;
      color: #4b5563;
    }
    .animate-pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
  </style>
</head>
<div class="min-h-screen">
  <div class="max-w-4xl mx-auto p-4 sm:p-6">
    <!-- Back Button -->
     <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
        <div class="flex items-center gap-4 ">
            <%= render 'components/back_button' %>
            <div class="inline-flex items-center gap-2.5 rounded-lg px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-all duration-200 mb-4">
            <h1 class="text-2xl font-bold text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-all duration-200 mx-auto">Profile</h1>
            </div>
        </div>
    </div>

    <!-- Profile Card -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden mb-6">
      <!-- Profile Header with Edit Button -->
      <div class="p-6 sm:p-8 border-b border-gray-100 flex justify-between items-start">
        <div class="flex flex-col sm:flex-row items-center gap-6">
         <%= image_tag(@user.avatar_thumbnail, class: "w-24 h-24 sm:w-32 sm:h-32 rounded-full border-4 border-blue-50 object-cover shadow-sm") %>
          <div class="text-center sm:text-left mt-4 sm:mt-0">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900"><%= @user.full_name %></h1>
            <div class="mt-2 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <%= @user.role.humanize%>
            </div>
            <p class="mt-2 text-gray-500">@<%=@user.username%></p>
          </div>
        </div>
        <%= link_to "Edit Profile",
        edit_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>

      </div>

      <!-- Tabs Navigation -->
           <%= render 'users/partials/navigation'%>

      <!-- Tab Contents -->
      <div class="p-6 sm:p-8">
        <!-- Profile Tab Content -->
           <%= render 'users/partials/profile', object: @user %>

            <!-- Children Section -->
            <% if !@user.child_users.empty? %>
                <%= render 'users/partials/children'%>
            <% end %>

        <!-- Notifications Tab Content -->
          <%= render 'users/partials/notifications'%>

        <!-- Settings Tab Content -->
          <%= render 'users/partials/settings'%>

        <!-- Chats Tab Content -->
          <%= render 'users/partials/chat'%>
      </div>
    </div>
  </div>
</div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Tab switching functionality
      const tabButtons = document.querySelectorAll('.tab-button');
      const tabContents = document.querySelectorAll('.tab-content');
      
      tabButtons.forEach(button => {
        button.addEventListener('click', () => {
          const tabId = button.getAttribute('data-tab');
          
          // Update button states
          tabButtons.forEach(btn => btn.classList.remove('tab-active'));
          button.classList.add('tab-active');
          
          // Update content visibility
          tabContents.forEach(content => content.classList.add('hidden'));
          document.getElementById(`tab-${tabId}`).classList.remove('hidden');
        });
      });
    
    });
  </script>