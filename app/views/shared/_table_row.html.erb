<tr class="hover:bg-gray-50 transition-colors" <%= defined?(data_attributes) ? raw(data_attributes) : '' %>>
  <% cells.each do |cell| %>
    <td class="<%= cell[:classes] || 'px-6 py-4 whitespace-nowrap text-sm text-gray-500' %>">
      <%= cell[:content] %>
    </td>
  <% end %>
  
  <% if defined?(actions) && actions %>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
      <div class="flex justify-end space-x-2">
        <% actions.each do |action| %>
          <%= action %>
        <% end %>
      </div>
    </td>
  <% end %>
</tr>