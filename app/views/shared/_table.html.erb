<div class="bg-white rounded-xl shadow-md overflow-hidden general_card">
  <!-- Search and Filters -->
  <% if defined?(searchable) && searchable %>
    <div class="p-4 border-b border-gray-200 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div class="relative w-full sm:w-64">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
          </svg>
        </div>
        <input type="text" id="tableSearchInput" placeholder="<%= search_placeholder || 'Search...' %>" 
               class="pl-10 pr-4 py-2 w-full bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
      </div>
    </div>
  <% end %>

  <!-- Table -->
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-blue-50">
        <tr>
          <% headers.each do |header| %>
            <th scope="col" class="<%= header[:classes] || 'px-6 py-3 text-left text-xs font-medium text-blue-700 uppercase tracking-wider' %>">
              <%= header[:title] %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <%= yield %>
      </tbody>
    </table>
  </div>
</div>

<!-- Pagination -->
<% if defined?(paginated) && paginated %>
  <div class="flex justify-center my-4">
    <%= will_paginate paginated, renderer: TailwindPaginationRenderer %>
  </div>
<% end %>