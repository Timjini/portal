<%= form_with(model: exercise, class: "contents") do |form| %>
  <% if exercise.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
      <div class="flex items-center">
        <svg class="h-5 w-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <h2 class="text-lg font-medium text-red-800"><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>
      </div>
      <ul class="mt-2 list-disc pl-5 space-y-1 text-sm text-red-700">
        <% exercise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:p-6 space-y-6">
        <!-- Basic Information Section -->
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900 border-b pb-2 mb-4">Basic Information</h3>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-4">
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :name, class: "p-2.5 border block w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:name].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :description, rows: 4, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:description].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <!-- Image Upload -->
            <div class="sm:col-span-6">
              <%= form.label :image, "Exercise Image", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 flex items-center">
                <% if exercise.image.attached? %>
                  <%= image_tag exercise.image, class: "h-20 w-20 rounded-md object-cover mr-4" %>
                <% end %>
                <%= form.file_field :image, class: "p-2.5 border block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Performance Parameters Section -->
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900 border-b pb-2 mb-4">Performance Parameters</h3>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-2">
              <%= form.label :reps, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :reps, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:reps].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :sets, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :sets, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:sets].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :duration_seconds, "Duration (sec)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :duration_seconds, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:duration_seconds].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :distance_meters, "Distance (m)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :distance_meters, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:distance_meters].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Benchmarks Section -->
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900 border-b pb-2 mb-4">Benchmarks</h3>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :male_benchmark, "Male Benchmark", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :male_benchmark, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:male_benchmark].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :female_benchmark, "Female Benchmark", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :female_benchmark, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:female_benchmark].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Information Section -->
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900 border-b pb-2 mb-4">Additional Information</h3>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :notes, rows: 3, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:notes].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :movement_patterns, "Movement Patterns (comma separated)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :movement_patterns, value: exercise.movement_patterns_array&.join(', '), class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:movement_patterns].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :equipment, "Equipment (comma separated)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :equipment,value: exercise.equipment_array&.join(', ') , class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:equipment].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :video_url, "Video URL", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :video_url, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm #{exercise.errors[:video_url].any? ? 'border-red-300 text-red-900' : ''}" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :difficulty_level, "Difficulty Level", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.select :difficulty_level, options_for_select(['Beginner', 'Intermediate', 'Advanced'], exercise.difficulty_level), { include_blank: true }, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :intensity, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.select :intensity, options_for_select(['Low', 'Medium', 'High'], exercise.intensity), { include_blank: true }, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :primary_focus, "Primary Focus", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :primary_focus, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </div>
            </div>
            <div class="sm:col-span-3">
              <%= form.label :muscle_group, "Muscle Group", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :muscle_group, class: "p-2.5 border block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
        <%= link_to "Cancel", exercises_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 ml-2" %>
      </div>
    </div>
  </div>
<% end %>