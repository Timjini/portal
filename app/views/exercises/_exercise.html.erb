<div class="bg-white shadow rounded-lg overflow-hidden">
  <!-- Image Section -->
  <% if exercise.image_url.present? %>
    <div class="h-48 bg-gray-100 overflow-hidden">
      <%= image_tag exercise.image_url, alt: exercise.name, class: "w-full h-full object-cover" %>
    </div>
  <% end %>

  <div class="px-4 py-5 sm:p-6">
    <!-- Header Section -->
    <div class="border-b border-gray-200 pb-4 mb-4">
      <h2 class="text-2xl font-bold text-gray-900"><%= exercise.name %></h2>
      <% if exercise.description.present? %>
        <p class="mt-1 text-gray-600"><%= exercise.description %></p>
      <% end %>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <!-- Primary Parameters -->
      <div class="space-y-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="text-lg font-medium text-gray-900 mb-3">Performance Parameters</h3>
          <div class="grid grid-cols-2 gap-4">
            <% if exercise.reps.present? %>
              <div>
                <p class="text-sm font-medium text-gray-500">Reps</p>
                <p class="text-lg font-semibold"><%= exercise.reps %></p>
              </div>
            <% end %>
            
            <% if exercise.sets.present? %>
              <div>
                <p class="text-sm font-medium text-gray-500">Sets</p>
                <p class="text-lg font-semibold"><%= exercise.sets %></p>
              </div>
            <% end %>
            
            <% if exercise.duration_seconds.present? %>
              <div>
                <p class="text-sm font-medium text-gray-500">Duration</p>
                <p class="text-lg font-semibold"><%= exercise.duration_seconds %> sec</p>
              </div>
            <% end %>
            
            <% if exercise.distance_meters.present? %>
              <div>
                <p class="text-sm font-medium text-gray-500">Distance</p>
                <p class="text-lg font-semibold"><%= exercise.distance_meters %> m</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Benchmarks -->
        <% if exercise.male_benchmark.present? || exercise.female_benchmark.present? %>
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-3">Benchmarks</h3>
            <div class="grid grid-cols-2 gap-4">
              <% if exercise.male_benchmark.present? %>
                <div>
                  <p class="text-sm font-medium text-gray-500">Male</p>
                  <p class="text-lg font-semibold text-blue-600"><%= exercise.male_benchmark %></p>
                </div>
              <% end %>
              
              <% if exercise.female_benchmark.present? %>
                <div>
                  <p class="text-sm font-medium text-gray-500">Female</p>
                  <p class="text-lg font-semibold text-pink-600"><%= exercise.female_benchmark %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Secondary Information -->
      <div class="space-y-4">
        <% if exercise.equipment.present? %>
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-3">Equipment</h3>
            <div class="flex flex-wrap gap-2">
              <% exercise.equipment.split(',').each do |equipment| %>
                <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-800">
                  <%= equipment.strip %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if exercise.movement_patterns.present? %>
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-3">Movement Patterns</h3>
            <div class="flex flex-wrap gap-2">
              <% exercise.movement_patterns.split(',').each do |pattern| %>
                <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800">
                  <%= pattern.strip %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if exercise.notes.present? %>
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-3">Notes</h3>
            <p class="text-gray-700"><%= exercise.notes %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>