<div id="<%= dom_id time_slot %>" class="flex flex-col gap-2 my-10 rounded-2xl shadow-soft-lg p-4">
  <p>
    <strong>Date:</strong>
    <%= time_slot.date.strftime("%d/%m/%Y") %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= time_slot.title %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= time_slot.start_time.strftime("%H:%M") %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= time_slot.end_time.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Group type:</strong>
    <%= time_slot.group_type_list %>
  </p>

  <p>
    <strong>Coaches:</strong>
    <%= time_slot.coach_names %>
  </p>
<div class="mb-4">
  <% time_slot.coach_data.each do |coach| %>
  <div class="flex flex-row mb-4 justify-between items-center bg-gray-50 p-4 rounded-lg shadow-md">
    <div class="coach-image mb-5">
            <%user = User.find(coach[:id])%>
            <%= image_tag(user.avatar_thumbnail, class: "w-10 h-10 object-cover rounded-full") %>
            <div class="coach-info">
      <h3><%= coach[:name] %></h3>
    </div>
    </div>
     <div>
      <a href="<%= coach[:url] %>" class="btn btn-primary">View Profile</a>
    </div>
  </div>
<% end %>
</div>

</div>
