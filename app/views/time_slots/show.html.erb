<p style="color: green"><%= notice %></p>
<%= link_to time_slots_path, class: '' do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 9l-3 3m0 0l3 3m-3-3h7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
  <% end %>

<%= render @time_slot %>

<div class="flex flex-row gap-2">
  <%= link_to edit_time_slot_path(@time_slot), class: '' do %>
    <span class="material-symbols-outlined">edit</span> 
  <% end %>
  <%= button_to @time_slot, method: :delete, data: { confirm: 'Are you sure?' }, class: '' do %>
    <span class="material-symbols-outlined delete-user-button">delete</span>
  <% end %>

</div>
