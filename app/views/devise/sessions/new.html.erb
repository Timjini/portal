<%url = request.original_url.gsub("/sign_in", "")%>
<% render 'devise/shared/error_messages' %>
<div class="h-screen md:flex">
	<div
		class="relative overflow-hidden md:flex w-1/2 bg-gradient-to-tr coverside i justify-around items-center hidden">
		<div>
			<h1 class="text-white font-bold text-4xl font-sans">Chamber For Sport</h1>
			<p class="text-white mt-1">Letâ€™s Start The Race.</p>
			<a type="submit" class="block w-28 bg-white text-indigo-800 mt-4 py-2 rounded-2xl font-bold mb-2 text-center text-red-700" href="<%=url%>/sign_up">
				Sign Up
			</a>
		</div>
		<div class="absolute -bottom-32 -left-40 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
		<div class="absolute -bottom-40 -left-20 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
	</div>
	<div class="form flex md:w-1/2 justify-center py-10 items-center bg-slate-50 dark:bg-transparent dark:bg-gradient-to-tl dark:from-gray-900 dark:to-slate-800  shadow-soft-xl">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<h1 class=" font-bold text-2xl mb-1 dark:text-white">Hello Again!</h1>
			<p class="text-sm font-normal mb-7 dark:text-white">Welcome Back</p>
			<div class="flex items-center  py-2 px-3 rounded-2xl mb-4 hidden">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
					fill="currentColor">
					<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
						clip-rule="evenodd" />
				</svg>
				<input class="pl-2 outline-none border-none" type="text" name="" id="" placeholder="Full name" />
      		</div>
				<div class="flex items-center  py-2 px-3 rounded-2xl mb-4 hidden">
					<span> Username</span>
					<input class="pl-2 outline-none border-none" type="text" name="" id="" placeholder="Username" />
      			</div>
					<div class="flex flex-wrap items-center  py-2 px-3 rounded-2xl mb-4">
					<div style="min-width:100px;">
						<span class="ml-2 mb-1 dark:text-white">Email </span>
					</div>
            			<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-muted" %>
     				 </div>
						<div class="flex flex-wrap items-center  py-2 px-3 rounded-2xl password-container">
						 <div style="min-width:100px;">
							<span class="ml-2 mb-1 dark:text-white">Password</span>
						 </div>
								<%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-muted", id: "password-field" %>
							<i class="toggle-password far fa-eye" onclick="togglePasswordVisibility()"></i>
      					</div>
						<div class="flex items-center px-3 pt-4 pb-1 rounded-2xl ">
							<%= f.submit "Log in", class:"block w-full bg-red-700 mt-4 py-2 rounded-2xl  text-white font-semibold mb-2" %>
						</div>
               <% if devise_mapping.rememberable? %>
                <div class="flex items-center ml-5  px-3 rounded-2xl">
                  <%= f.check_box :remember_me , class:"w-4 h-4 text-red-600 bg-gray-100 border-gray-300 rounded focus:ring-red-600 dark:focus:ring-red-700 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                  <%= f.label :remember_me , class:"ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
                </div>
              <% end %>
              <% end %>
	</div>
</div>

<script>
// JavaScript
function togglePasswordVisibility() {
  var passwordField = document.getElementById("password-field");
  var togglePassword = document.querySelector(".toggle-password");

  if (passwordField.type === "password") {
    passwordField.type = "text";
    togglePassword.classList.add("password-visible");
  } else {
    passwordField.type = "password";
    togglePassword.classList.remove("password-visible");
  }
}


</script>