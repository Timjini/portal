<div class="max-w-4xl mx-auto mb-6">
  <div class="flex flex-wrap justify-center gap-2">
    <!-- All Users -->
    <%= link_to all_accounts_accounts_path(page:1), 
        class: "px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 #{params[:role].blank? ? 'bg-blue-600 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      All Users
    <% end %>
    
    <!-- Coaches -->
    <%= link_to all_accounts_accounts_path(page:1 , role: 'coach'), 
        class: "px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 #{params[:role] == 'coach' ? 'bg-blue-600 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      Coaches
    <% end %>
    
    <!-- Parents -->
    <%= link_to all_accounts_accounts_path(page:1, role: 'parent_user'), 
        class: "px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 #{params[:role] == 'parent_user' ? 'bg-blue-600 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      Athlete's Parents
    <% end %>
    
    <!-- Junior Athletes -->
    <%= link_to all_accounts_accounts_path(page:1, role: 'child_user'), 
        class: "px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 #{params[:role] == 'child_user' ? 'bg-blue-600 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      Junior Athletes
    <% end %>
    
    <!-- Athletes -->
    <%= link_to all_accounts_accounts_path(page:1, role: 'athlete'), 
        class: "px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 #{params[:role] == 'athlete' ? 'bg-blue-600 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      Athletes
    <% end %>
  </div>
</div>