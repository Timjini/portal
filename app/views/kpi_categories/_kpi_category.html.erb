<div id="<%= dom_id kpi_category %>" class="bg-gray-50 rounded-lg p-6 shadow-inner">
  <div class="space-y-4">
    <div class="flex flex-col md:flex-row gap-1 md:gap-4">
      <div class="w-full md:w-1/4">
        <span class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Name</span>
      </div>
      <div class="w-full md:w-3/4">
        <p class="text-lg font-medium text-gray-800">
          <%= kpi_category.name %>
        </p>
      </div>
    </div>

    <div class="border-t border-gray-200 my-3"></div>

    <div class="flex flex-col md:flex-row gap-1 md:gap-4">
      <div class="w-full md:w-1/4">
        <span class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Description</span>
      </div>
      <div class="w-full md:w-3/4">
        <p class="text-gray-700 whitespace-pre-line">
          <%= kpi_category.description.presence || "No description provided" %>
        </p>
      </div>
    </div>
  </div>
</div>