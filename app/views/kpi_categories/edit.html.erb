<% content_for :title, "Editing KPI Category" %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-4xl bg-white rounded-xl shadow-md overflow-hidden">
    <div class="p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Edit KPI Category</h1>
        <div class="w-20 h-1 bg-blue-500 mx-auto"></div>
      </div>

      <%= render "form", kpi_category: @kpi_category %>

      <div class="flex flex-wrap justify-center gap-4 mt-8 pt-6 border-t border-gray-200">
        <%= link_to "View Category", @kpi_category, 
                   class: "px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg shadow-sm transition-colors" %>
        <%= link_to "Back to Categories", kpi_categories_path, 
                   class: "px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg shadow-sm transition-colors" %>
      </div>
    </div>
  </div>
</div>