<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <!-- Header -->
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <div class="flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Error Details
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            ID: <%= @error.id %> | Occurred at: <%= @error.occurred_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </p>
        </div>
        <span class="px-3 py-1 rounded-full text-sm font-medium 
          <%= @error.error_type == 'warning' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
          <%= @error.error_type.humanize %>
        </span>
      </div>
    </div>

    <!-- Main Content -->
    <div class="px-4 py-5 sm:p-0">
      <div class="sm:divide-y sm:divide-gray-200">
        <!-- Error Type & Message -->
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Error Type
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-mono">
            <%= @error.error_type %>
          </dd>
        </div>
        
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Message
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-mono bg-gray-50 p-3 rounded">
            <%= @error.message %>
          </dd>
        </div>

        <!-- Context -->
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Context
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <div class="bg-gray-50 p-3 rounded overflow-x-auto">
              <pre class="text-sm font-mono"><%= JSON.pretty_generate(@error.context) %></pre>
            </div>
          </dd>
        </div>

        <!-- Backtrace -->
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Backtrace
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <div class="bg-gray-50 p-3 rounded max-h-96 overflow-y-auto">
              <ol class="list-decimal list-inside font-mono space-y-1">
                <% @error.backtrace.each_line do |line| %>
                  <li class="py-1 hover:bg-gray-100 px-2 -ml-2 rounded"><%= line.chomp %></li>
                <% end %>
              </ol>
            </div>
          </dd>
        </div>
      </div>
    </div>

    <!-- Footer with Actions -->
    <div class="px-4 py-4 sm:px-6 border-t border-gray-200 flex justify-end space-x-3">
      <%= link_to "Back to Errors List", app_errors_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= button_to "Delete Error", app_error_path(@error), method: :delete, data: { confirm: "Are you sure you want to delete this error?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>
</div>