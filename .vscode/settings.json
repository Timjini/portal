{
  "cSpell.words": ["ALLOWFROM","antiquewhite","cancancan","checkin","hotwired","iframed","ILIKE","msapplication","progname","replit","rgba","sslca"],
  "files.associations": {
    "*.html.erb": "html"
  },
  "rubyLsp.enabledFeatures": {
    "diagnostics": true,
    "formatting": true
  },
  "rubyLsp.rubocop.enabled": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "Shopify.ruby-lsp",
  "rubyLsp.testFramework": "rspec",
  "rubyLsp.rspecCommand": "bundle exec rspec",
  "rubyLsp.rspecOptions": [
    "--format",
    "documentation"
  ],
}
