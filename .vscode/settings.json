{
  "cSpell.words": [
    "ALLOWFROM",
    "antiquewhite",
    "cancancan",
    "checkin",
    "hotwired",
    "iframed",
    "ILIKE",
    "msapplication",
    "progname",
    "replit",
    "rgba",
    "sslca"
  ],

  "files.associations": {
    "*.html.erb": "erb"
  },

  "editor.formatOnSave": true,

  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true
  },

  "[erb]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },

  "rubyLsp.enabledFeatures": {
    "diagnostics": true,
    "formatting": true
  },
  "rubyLsp.rubocop.enabled": true,

  "rubyLsp.testFramework": "rspec",
  "rubyLsp.rspecCommand": "bundle exec rspec",
  "rubyLsp.rspecOptions": [
    "--format",
    "documentation"
  ]
}
