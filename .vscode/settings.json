{
  "cSpell.words": [
    "ALLOWFROM",
    "antiquewhite",
    "bootsnap",
    "Brevo",
    "byebug",
    "cancancan",
    "checkin",
    "groupdate",
    "hotwired",
    "htmlbeautifier",
    "iframed",
    "ILIKE",
    "jbuilder",
    "msapplication",
    "progname",
    "replit",
    "rgba",
    "sidekiq",
    "sslca",
    "transac"
  ],
  "files.associations": {
    "*.html.erb": "erb"
  },
  "editor.formatOnSave": true,
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true
  },
  "[erb]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "rubyLsp.enabledFeatures": {
    "diagnostics": true,
    "formatting": true
  },
  "rubyLsp.rubocop.enabled": true,
  "rubyLsp.testFramework": "rspec",
  "rubyLsp.rspecCommand": "bundle exec rspec",
  "rubyLsp.rspecOptions": [
    "--format",
    "documentation"
  ]
}